<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222"
    android:theme="@style/PlayerTheme">

    <android.support.v4.view.ViewPager
        android:id="@+id/image_player_browser"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/image_player_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/image_player_menu_progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentTop="true"
                android:max="100"
                android:progress="40" />

            <View
                android:id="@+id/image_player_exit_full"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="250dp"
                android:background="@drawable/round_button" />

            <LinearLayout
                android:id="@+id/image_player_menu_recommendation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-200dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/image_player_menu_recommendation_switch"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@color/gray"
                    android:clickable="true" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <LinearLayout
                        android:background="@color/colorBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="180dp"
                            android:layout_margin="10dp"
                            android:background="@color/white" />

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="180dp"
                            android:layout_margin="10dp"
                            android:background="@color/white" />

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="180dp"
                            android:layout_margin="10dp"
                            android:background="@color/white" />

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="180dp"
                            android:layout_margin="10dp"
                            android:background="@color/white" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/image_player_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:gravity="center"
        android:visibility="invisible">

        <TextView
            android:id="@+id/image_player_cover_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/loading" />

        <ProgressBar
            android:id="@+id/image_player_cover_progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignTop="@id/image_player_cover_loading"
            android:max="100"
            android:progress="0"
            android:secondaryProgressTint="@color/white" />

        <TextView
            android:id="@+id/image_player_cover_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image_player_cover_progress_bar"
            android:gravity="center" />
    </RelativeLayout>
</RelativeLayout>